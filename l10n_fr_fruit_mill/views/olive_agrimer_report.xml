<odoo>


<record id="fruit_agrimer_report_form" model="ir.ui.view">
    <field name="name">fruit.agrimer.report.form</field>
    <field name="model">fruit.agrimer.report</field>
    <field name="arch" type="xml">
        <form string="Agrimer Report">
            <header>
                <button name="generate_report" type="object" string="Generate Report" states="draft"/>
                <button name="draft2done" string="Mark as Done" class="btn-primary" states="draft" type="object"/>
                <button name="back2draft" string="Back to Draft" class="btn-default" states="done" type="object"/>
                <field name="state" widget="statusbar"/>
            </header>
            <sheet>
                <group name="main">
                <group name="dates" string="Period" colspan="2">
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="date_range_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <group name="fruit_in" string="Fruit In">
                    <label for="fruit_arrival_qty" string="Fruit Arrival"/>
                    <div name="fruit_arrival_qty">
                        <field name="fruit_arrival_qty" class="oe_inline"/>
                        <label for="fruit_arrival_qty" string=" kg"/>
                    </div>
                </group>
                <group name="fruit_out" string="Fruit Out">
                    <label for="fruit_pressed_qty" string="Fruit Pressed"/>
                    <div name="fruit_pressed_qty">
                        <field name="fruit_pressed_qty" class="oe_inline"/>
                        <label for="fruit_pressed_qty" string=" kg"/>
                    </div>
                </group>
                <group name="juice_in" string="Juice In">
                    <label for="organic_virgin_juice_produced" string="Organic Virgin Fruit Juice Produced"/>
                    <div name="organic_virgin_juice_produced">
                        <field name="organic_virgin_juice_produced" class="oe_inline"/>
                        <label for="organic_virgin_juice_produced" string=" L"/>
                    </div>
                    <label for="organic_extravirgin_juice_produced" string="Organic Extra Virgin Fruit Juice Produced"/>
                    <div name="organic_extravirgin_juice_produced">
                        <field name="organic_extravirgin_juice_produced" class="oe_inline"/>
                        <label for="organic_extravirgin_juice_produced" string=" L"/>
                    </div>
                    <label for="regular_virgin_juice_produced" string="Regular Virgin Fruit Juice Produced"/>
                    <div name="regular_virgin_juice_produced">
                        <field name="regular_virgin_juice_produced" class="oe_inline"/>
                        <label for="regular_virgin_juice_produced" string=" L"/>
                    </div>
                    <label for="regular_extravirgin_juice_produced" string="Regular Extra Virgin Fruit Juice Produced"/>
                    <div name="regular_extravirgin_juice_produced">
                        <field name="regular_extravirgin_juice_produced" class="oe_inline"/>
                        <label for="regular_extravirgin_juice_produced" string=" L"/>
                    </div>
                </group>
                <group name="juice_out_shrinkage" string="Juice Out - Shrinkage">
                    <label for="shrinkage_organic_virgin_juice" string="Organic Virgin Juice"/>
                    <div name="shrinkage_organic_virgin_juice">
                        <field name="shrinkage_organic_virgin_juice" class="oe_inline"/>
                        <label for="shrinkage_organic_virgin_juice" string=" L"/>
                    </div>
                    <label for="shrinkage_organic_extravirgin_juice" string="Organic Extra Virgin Juice"/>
                    <div name="shrinkage_organic_extravirgin_juice">
                        <field name="shrinkage_organic_extravirgin_juice" class="oe_inline"/>
                        <label for="shrinkage_organic_extravirgin_juice" string=" L"/>
                    </div>
                    <label for="shrinkage_regular_virgin_juice" string="Regular Virgin Juice"/>
                    <div name="shrinkage_regular_virgin_juice">
                        <field name="shrinkage_regular_virgin_juice" class="oe_inline"/>
                        <label for="shrinkage_regular_virgin_juice" string=" L"/>
                    </div>
                    <label for="shrinkage_regular_extravirgin_juice" string="Regular Extra Virgin Juice"/>
                    <div name="shrinkage_regular_extravirgin_juice">
                        <field name="shrinkage_regular_extravirgin_juice" class="oe_inline"/>
                        <label for="shrinkage_regular_extravirgin_juice" string=" L"/>
                    </div>
                </group>
                <group name="juice_out_withdrawal" string="Juice Out - Withdrawal">
                    <label for="withdrawal_organic_virgin_juice" string="Organic Virgin Juice"/>
                    <div name="withdrawal_organic_virgin_juice">
                        <field name="withdrawal_organic_virgin_juice" class="oe_inline"/>
                        <label for="withdrawal_organic_virgin_juice" string=" L"/>
                    </div>
                    <label for="withdrawal_organic_extravirgin_juice" string="Organic Extra Virgin Juice"/>
                    <div name="withdrawal_organic_extravirgin_juice">
                        <field name="withdrawal_organic_extravirgin_juice" class="oe_inline"/>
                        <label for="withdrawal_organic_extravirgin_juice" string=" L"/>
                    </div>
                    <label for="withdrawal_regular_virgin_juice" string="Regular Virgin Juice"/>
                    <div name="withdrawal_regular_virgin_juice">
                        <field name="withdrawal_regular_virgin_juice" class="oe_inline"/>
                        <label for="withdrawal_regular_virgin_juice" string=" L"/>
                    </div>
                    <label for="withdrawal_regular_extravirgin_juice" string="Regular Extra Virgin Juice"/>
