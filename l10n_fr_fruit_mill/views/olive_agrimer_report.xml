                    </div>
                </group>
                <group name="juice_out_sale_consumer" string="Juice Out - Sale to Consumers">
                    <label for="sale_consumer_organic_virgin_juice" string="Organic Virgin Juice"/>
                    <div name="sale_consumer_organic_virgin_juice">
                        <field name="sale_consumer_organic_virgin_juice" class="oe_inline"/>
                        <label for="sale_consumer_organic_virgin_juice" string=" L"/>
                    </div>
                    <label for="sale_consumer_organic_extravirgin_juice" string="Organic Extra Virgin Juice"/>
                    <div name="sale_consumer_organic_extravirgin_juice">
                        <field name="sale_consumer_organic_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_consumer_organic_extravirgin_juice" string=" L"/>
                    </div>
                    <label for="sale_consumer_regular_virgin_juice" string="Regular Virgin Juice"/>
                    <div name="sale_consumer_regular_virgin_juice">
                        <field name="sale_consumer_regular_virgin_juice" class="oe_inline"/>
                        <label for="sale_consumer_regular_virgin_juice" string=" L"/>
                    </div>
                    <label for="sale_consumer_regular_extravirgin_juice" string="Regular Extra Virgin Juice"/>
                    <div name="sale_consumer_regular_extravirgin_juice">
                        <field name="sale_consumer_regular_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_consumer_regular_extravirgin_juice" string=" L"/>
                    </div>
                </group>
                <group name="juice_out_sale_distributor" string="Juice Out - Sale to Distributors">
                    <label for="sale_distributor_organic_virgin_juice" string="Organic Virgin Juice"/>
                    <div name="sale_distributor_organic_virgin_juice">
                        <field name="sale_distributor_organic_virgin_juice" class="oe_inline"/>
                        <label for="sale_distributor_organic_virgin_juice" string=" L"/>
                    </div>
                    <label for="sale_distributor_organic_extravirgin_juice" string="Organic Extra Virgin Juice"/>
                    <div name="sale_distributor_organic_extravirgin_juice">
                        <field name="sale_distributor_organic_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_distributor_organic_extravirgin_juice" string=" L"/>
                    </div>
                    <label for="sale_distributor_regular_virgin_juice" string="Regular Virgin Juice"/>
                    <div name="sale_distributor_regular_virgin_juice">
                        <field name="sale_distributor_regular_virgin_juice" class="oe_inline"/>
                        <label for="sale_distributor_regular_virgin_juice"  string=" L"/>
                    </div>
                    <label for="sale_distributor_regular_extravirgin_juice" string="Regular Extra Virgin Juice"/>
                    <div name="sale_distributor_regular_extravirgin_juice">
                        <field name="sale_distributor_regular_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_distributor_regular_extravirgin_juice" string=" L"/>
                    </div>
                </group>
                <group name="juice_out_sale_loose" string="Juice Out - Loose Sale">
                    <label for="sale_loose_organic_virgin_juice" string="Organic Virgin Juice"/>
                    <div name="sale_loose_organic_virgin_juice">
                        <field name="sale_loose_organic_virgin_juice" class="oe_inline"/>
                        <label for="sale_loose_organic_virgin_juice" string=" L"/>
                    </div>
                    <label for="sale_loose_organic_extravirgin_juice" string="Organic Extra Virgin Juice"/>
                    <div name="sale_loose_organic_extravirgin_juice">
                        <field name="sale_loose_organic_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_loose_organic_extravirgin_juice" string=" L"/>
                    </div>
                    <label for="sale_loose_regular_virgin_juice" string="Regular Virgin Juice"/>
                    <div name="sale_loose_regular_virgin_juice">
                        <field name="sale_loose_regular_virgin_juice" class="oe_inline"/>
                        <label for="sale_loose_regular_virgin_juice" string=" L"/>
                    </div>
                    <label for="sale_loose_regular_extravirgin_juice" string="Regular Extra Virgin Juice"/>
                    <div name="sale_loose_regular_extravirgin_juice">
                        <field name="sale_loose_regular_extravirgin_juice" class="oe_inline"/>
                        <label for="sale_loose_regular_extravirgin_juice" string=" L"/>
                    </div>
                </group>
            </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="fruit_agrimer_report_tree" model="ir.ui.view">
    <field name="name">fruit.agrimer.report.tree</field>
    <field name="model">fruit.agrimer.report</field>
    <field name="arch" type="xml">
        <tree string="Agrimer Reports" decoration-info="state == 'draft'">
            <field name="date_range_id"/>
            <field name="date_start"/>
            <field name="date_end"/>
            <field name="state"/>
            <field name="company_id" groups="base.group_multi_company"/>
        </tree>
    </field>
</record>

<record id="fruit_agrimer_report_search" model="ir.ui.view">
    <field name="name">fruit.agrimer.report.search</field>
    <field name="model">fruit.agrimer.report</field>
    <field name="arch" type="xml">
        <search string="Search Agrimer Reports">
            <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
            <filter name="done" string="Done" domain="[('state', '=', 'done')]"/>
            <group string="Group By" name="groupby">
                <filter name="date_groupby" string="Year" context="{'group_by': 'date:year'}"/>
            </group>
        </search>
    </field>
</record>

<record id="fruit_agrimer_report_action" model="ir.actions.act_window">
    <field name="name">AgriMer</field>
    <field name="res_model">fruit.agrimer.report</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="fruit_agrimer_report_menu" action="fruit_agrimer_report_action" parent="fruit_mill.fruit_report_menu" sequence="50"/>


</odoo>
