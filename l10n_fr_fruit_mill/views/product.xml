<odoo>

<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">fr.fruit.mill.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="fruit_mill.product_template_form_view"/>
    <field name="arch" type="xml">
        <field name="fruit_culture_type" position="after">
            <field name="fruit_juice_type" attrs="{'invisible': [('fruit_type', '!=', 'juice')], 'required': [('fruit_type', '=', 'juice')]}"/>
        </field>
    </field>
</record>

</odoo>
