<odoo>


<record id="view_partner_form" model="ir.ui.view">
    <field name="name">fruit.mill.fruit_farmer.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='child_ids']/form//field[@name='customer']" position="after">
            <field name="fruit_farmer" invisible="1"/>
        </xpath>
        <field name="child_ids" position="attributes">
            <attribute name="context" operation="python_dict" key="default_fruit_farmer">fruit_farmer</attribute>
        </field>
    </field>
</record>

<record id="fruit_tab_button_partner_form" model="ir.ui.view">
    <field name="name">fruit.mill.tab.button.partner.form</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="groups_id" eval="[(4, ref('stock.group_stock_user')), (4, ref('fruit_operator'))]"/>
    <!-- Inherit before specific modules, to be sure Fruit Mill is the first tab -->
    <field name="priority">5</field>
    <field name="arch" type="xml">
        <xpath expr="//page[@name='sales_purchases']//field[@name='customer']" position="after">
            <field name="fruit_farmer"/>
        </xpath>
        <xpath expr="//field[@name='child_ids']/.." position="before">
            <page string="Fruit Mill" name="fruit_disabled" attrs="{'invisible': ['|', ('parent_id', '=', False), ('fruit_farmer', '=', False)]}">
                <div>
                    <p>Fruit mill related settings are managed on <button name="open_commercial_entity" type="object" string="the parent company" class="oe_link"/></p>
                </div>
            </page>
            <page name="fruit" string="Fruit Mill" attrs="{'invisible': ['|', ('parent_id', '!=', False), ('fruit_farmer', '=', False)]}" autofocus="autofocus">
                <div name="fruit_button_box" class="oe_button_box">
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_ochard_action)d"
                        icon="fa-pagelines"
                        context="{'default_partner_id': active_id, 'search_default_partner_id': active_id}">
                        <field string="Fruit Trees" name="fruit_tree_total" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_palox_action)d"
                        context="{'default_borrower_partner_id': active_id, 'search_default_borrower_partner_id': active_id, 'no_create': True}"
                        icon="fa-inbox">  <!-- use fa-pallet when we'll have access to FA 5.0.7, which is not the case in v10 -->
                        <field string="Lended Palox" name="fruit_lended_palox" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_lended_case_action)d"
                        context="{'default_partner_id': active_id, 'search_default_partner_id': active_id, 'fruit_lended_case_main_view': 1}"
                        icon="fa-codepen">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="fruit_lended_regular_case" widget="statinfo" nolabel="1"/>
                                + <field name="fruit_lended_organic_case" widget="statinfo" nolabel="1"/>
                                organic
                            </span>
                            <span class="o_stat_text">Lended Cases</span>
                        </div>
                    </button>
                </div>
                <div name="organic_logo" class="oe_inline" attrs="{'invisible': [('fruit_culture_type', '=', 'regular')]}">
                    <field name="fruit_organic_certified_logo" widget="image"/>
                </div>
                <div class="oe_title">
                    <field name="fruit_cultivation_form_ko" invisible="1"/>
                    <field name="fruit_parcel_ko" invisible="1"/>
                    <field name="fruit_organic_certif_ko" invisible="1"/>
                    <field name="fruit_invoicing_ko" invisible="1"/>
                    <div name="fruit_cultivation_form_ko" attrs="{'invisible': [('fruit_cultivation_form_ko', '=', False)]}" class="label label-danger" colspan="2">Cultivation form missing</div>
                    <div name="fruit_parcel_ko" attrs="{'invisible': [('fruit_parcel_ko', '=', False)]}" class="label label-warning">Parcel information incomplete</div>
                    <div name="fruit_organic_certif_ko" attrs="{'invisible': [('fruit_organic_certif_ko', '=', False)]}" class="label label-success">Organic certification missing</div>
                    <div name="fruit_invoicing_ko" attrs="{'invisible': [('fruit_invoicing_ko', '=', False)]}" class="label label-info">Invoicing to do</div>
                </div>
                <group name="fruit_main">
                    <group name="left">
                        <field name="fruit_sale_pricelist_id" string="Sale Pricelist"/>
                        <button type="action" name="%(fruit_appointment_tree_action)d" string="Appointments" context="{'default_partner_id': active_id, 'search_default_partner_id': active_id}" colspan="2"/>
                        <button type="action" name="%(fruit_palox_lend_action)d" string="Lend Palox and/or Cases" context="{'default_partner_id': active_id, 'default_way': 'lend'}" colspan="2"/>
                        <button type="action" name="%(fruit_palox_lend_action)d" string="Return Palox and/or Cases" context="{'default_partner_id': active_id, 'default_way': 'return'}" colspan="2" attrs="{'invisible': [('fruit_lended_palox', '=', 0), ('fruit_lended_regular_case', '=', 0), ('fruit_lended_organic_case', '=', 0)]}"/>
                        <button type="object" name="create_single_fruit_ochard" string="Quick-create an ochard to update later" attrs="{'invisible': [('fruit_ochard_ids', '!=', [])]}" colspan="2"/>
                        <button type="action" name="%(fruit_cultivation_action)d" string="Cultivation Form" context="{'default_partner_id': active_id, 'search_default_partner_id': active_id}" colspan="2"/>
                        <button name="update_organic_certif" string="Organic Certifications" type="object"/>
                        <button type="action" name="%(fruit_arrival_action)d" string="Arrivals" context="{'default_partner_id': active_id, 'search_default_partner_id': active_id}" colspan="2"/>
                        <button type="action" name="%(fruit_withdrawal_action)d" string="New Fruit Juice Withdrawal" context="{'default_partner_id': active_id}" colspan="2" groups="stock.group_stock_user"/>
                        <button type="action" name="%(fruit_invoice_create_action)d" string="Create Invoice" context="{'default_partner_id': active_id}" colspan="2" groups="stock.group_stock_user"/>
                        <button type="action" name="%(fruit_arrival_line_action)d" string="Show statistics" colspan="2" context="{'search_default_commercial_partner_id': active_id, 'search_default_arrival_done': True}" groups="stock.group_stock_user"/>
                    </group>
                    <group name="right">
                        <field name="fruit_current_season_id"/>
                        <label for="fruit_qty_current_season"/>
                        <div name="fruit_qty_current_season">
                            <field name="fruit_qty_current_season" class="oe_inline"/> kg
                        </div>
                        <label for="fruit_qty_triturated_current_season"/>
                        <div name="fruit_qty_triturated_current_season">
                            <field name="fruit_qty_triturated_current_season" class="oe_inline"/> kg
                        </div>
                        <label for="fruit_juice_qty_current_season"/>
                        <div name="fruit_juice_qty_current_season">
                            <field name="fruit_juice_qty_current_season" class="oe_inline"/> L
                        </div>
                        <label for="fruit_juice_ratio_current_season"/>
                        <div name="fruit_juice_ratio_current_season">
                            <field name="fruit_juice_ratio_current_season" class="oe_inline"/> %
                        </div>
                        <label for="fruit_juice_qty_withdrawal_current_season"/>
                        <div name="fruit_juice_qty_withdrawal_current_season">
                            <field name="fruit_juice_qty_withdrawal_current_season" class="oe_inline"/> L
                        </div>
                        <label for="fruit_juice_qty_to_withdraw"/>
                        <div name="fruit_juice_qty_to_withdraw">
                            <field name="fruit_juice_qty_to_withdraw" class="oe_inline"/> L
                        </div>
                        <label for="fruit_juice_qty_withdrawn_current_season"/>
                        <div name="fruit_juice_qty_withdrawn_current_season">
                            <field name="fruit_juice_qty_withdrawn_current_season" class="oe_inline"/> L
                        </div>
                        <label for="fruit_sale_juice_qty_current_season"/>
                        <div name="fruit_sale_juice_qty_current_season">
                            <field name="fruit_sale_juice_qty_current_season" class="oe_inline"/> L
                        </div>
                        <label for="fruit_area_total"/>
                        <div name="fruit_area_total">
                            <field name="fruit_area_total" class="oe_inline"/> ha
                        </div>
                        <field name="fruit_culture_type" invisible="1"/>
                        <field name="fruit_ochard_ids" invisible="1"/>
                    </group>
                </group>
            </page>
        </xpath>
    </field>
</record>


<record id="view_res_partner_filter" model="ir.ui.view">
    <field name="name">fruit.mill.partner.search</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_res_partner_filter"/>
    <field name="arch" type="xml">
        <filter name="supplier" position="after">
            <filter string="Fruit Farmer" name="fruit_farmer" domain="[('fruit_farmer', '=', True), ('parent_id', '=', False)]"/>
        </filter>
    </field>
</record>

<record id="fruit_farmer_partner_action" model="ir.actions.act_window">
    <field name="name">Farmers</field>
    <field name="res_model">res.partner</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{'search_default_fruit_farmer': True, 'default_fruit_farmer': True}</field>
</record>

<menuitem id="fruit_farmer_partner_menu" action="fruit_farmer_partner_action" parent="fruit_data_menu" sequence="10"/>

</odoo>
