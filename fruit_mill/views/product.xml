<odoo>

<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">fruit.mill.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="priority">1000</field>  <!-- to have fruit_type right after type -->
    <field name="arch" type="xml">
        <field name="type" position="after">
            <field name="fruit_type"/>
            <field name="fruit_culture_type" attrs="{'invisible': [('fruit_type', '!=', 'juice')], 'required': [('fruit_type', '=', 'juice')]}"/>
            <field name="fruit_bottle_free_full" attrs="{'invisible': [('fruit_type', '!=', 'bottle')]}"/>
            <field name="fruit_invoice_service_ids" widget="many2many_tags" attrs="{'invisible': [('fruit_type', '!=', 'juice')]}"/>
            <field name="fruit_analysis_uom" attrs="{'invisible': [('fruit_type', '!=', 'analysis')], 'required': [('fruit_type', '=', 'analysis')]}"/>
            <field name="fruit_analysis_decimal_precision" attrs="{'invisible': [('fruit_type', '!=', 'analysis')], 'required': [('fruit_type', '=', 'analysis')]}"/>
            <field name="fruit_analysis_instrument" attrs="{'invisible': [('fruit_type', '!=', 'analysis')]}"/>
            <field name="fruit_analysis_precision" attrs="{'invisible': [('fruit_type', '!=', 'analysis')]}"/>
        </field>
    </field>
</record>

<record id="product_normal_form_view" model="ir.ui.view">
    <field name="name">fruit.mill.product.product.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
        <field name="default_code" position="before">
            <field name="shrinkage_prodlot_id" attrs="{'invisible': [('fruit_type', '!=', 'juice')]}" context="{'default_product_id': active_id}" domain="[('product_id', '=', active_id)]"/>
        </field>
    </field>
</record>

<record id="product_template_search_view" model="ir.ui.view">
    <field name="name">fruit.mill.product.template.search</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_search_view"/>
    <field name="arch" type="xml">
        <filter name="filter_to_sell" position="before">
            <filter name="fruit_mill" string="Fruit Mill" domain="[('fruit_type', '!=', False)]"/>
            <separator/>
        </filter>
        <field name="pricelist_id" position="after">
            <group name="groupbyfruit">
                <filter name="fruit_type_groupby" string="Fruit Type" context="{'group_by': 'fruit_type'}"/>
            </group>
        </field>
    </field>
</record>

<record id="fruit_product_action" model="ir.actions.act_window">
    <field name="name">Products</field>
    <field name="res_model">product.product</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="context">{'default_type': 'product', 'search_default_fruit_mill': True}</field>
</record>

<menuitem id="fruit_product_menu" action="fruit_product_action" parent="fruit_data_menu" sequence="30"/>

</odoo>
