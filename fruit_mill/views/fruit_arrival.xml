<odoo>


<record id="fruit_arrival_form" model="ir.ui.view">
    <field name="name">fruit.arrival.form</field>
    <field name="model">fruit.arrival</field>
    <field name="arch" type="xml">
        <form string="Fruit Arrival">
            <header>
                <button name="check" string="Check" states="draft,weighted" type="object"/>
                <button name="weighted" string="Weighted" class="btn-primary" states="draft" type="object"/>
                <button name="validate" string="Validate" class="btn-primary" states="draft,weighted" type="object"/>
                <button name="print_report" string="Show Report" type="object"/>
                <button name="cancel" string="Cancel" class="btn-default" states="draft,weighted,done" confirm="Are you sure you want to cancel this arrival ?" type="object"/>
                <button name="back2draft" string="Back to Draft" class="btn-default" states="cancel" type="object"/>
                <button type="action" name="%(fruit_palox_lend_action)d" string="Lend Palox and/or Cases" context="{'default_partner_id': commercial_partner_id, 'default_arrival_id': active_id}" attrs="{'invisible': [('hide_lend_palox_case_button', '=', True)]}"/>
                <span name="fruit_cultivation_form_ko" attrs="{'invisible': ['|', ('fruit_cultivation_form_ko', '=', False), ('partner_id', '=', False)]}" class="label label-danger">Cultivation form missing</span>
                <span name="fruit_parcel_ko" attrs="{'invisible': ['|', ('fruit_parcel_ko', '=', False), ('partner_id', '=', False)]}" class="label label-warning">Parcel information incomplete</span>
                <span name="fruit_organic_certif_ko" attrs="{'invisible': ['|', ('fruit_organic_certif_ko', '=', False), ('partner_id', '=', False)]}" class="label label-success">Organic certification missing</span>
                <field name="state" widget="statusbar" statusbar_visible="draft,weighted,done"/>
            </header>
            <sheet>
                <div name="button_box" class="oe_button_box">
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_palox_action)d"
                        context="{'default_borrower_partner_id': commercial_partner_id, 'search_default_borrower_partner_id': commercial_partner_id, 'no_create': True}"
                        icon="fa-inbox">  <!-- use fa-pallet when we'll have access to FA 5.0.7, which is not the case in v10 -->
                        <field string="Lended Palox" name="lended_palox" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_lended_case_action)d"
                        context="{'default_partner_id': commercial_partner_id, 'search_default_partner_id': commercial_partner_id, 'fruit_lended_case_main_view': 1}"
                        icon="fa-codepen">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="lended_regular_case" widget="statinfo" nolabel="1"/>
                                + <field name="lended_organic_case" widget="statinfo" nolabel="1"/>
                                organic
                            </span>
                            <span class="o_stat_text">Lended Cases</span>
                        </div>
                    </button>
                    <button class="oe_stat_button" type="action"
                        name="%(fruit_mill.fruit_ochard_action)d"
                        icon="fa-pagelines"
                        context="{'default_partner_id': commercial_partner_id, 'search_default_partner_id': commercial_partner_id}">
                        <field string="Fruit Trees" name="partner_fruit_tree_total" widget="statinfo"/>
                    </button>
                </div>
                <field name="fruit_organic_certified_logo" widget="image" class="oe_avatar" attrs="{'invisible': [('fruit_organic_certified_logo', '=', False)]}"/>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group name="main">
                    <group name="left">
                        <field name="partner_id"/>
                        <field name="fruit_culture_type" invisible="0"/>
                        <field name="harvest_start_date"/>
                        <field name="default_ochard_id" domain="[('partner_id', '=', commercial_partner_id)]" context="{'default_partner_id': commercial_partner_id}"/>
                        <field name="default_variant_id" widget="selection"/>
                        <field name="default_juice_product_id" domain="[('fruit_type', '=', 'juice'), ('fruit_culture_type', '=', fruit_culture_type)]" widget="selection"/>
                        <field name="default_juice_destination"/>
                        <field name="default_leaf_removal"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <field name="fruit_cultivation_form_ko" invisible="1"/>
                        <field name="fruit_parcel_ko" invisible="1"/>
                        <field name="fruit_organic_certif_ko" invisible="1"/>
                    </group>
                    <group name="right">
                        <field name="date"/>
                        <label for="fruit_qty" string="Total Quantity"/>
                        <div name="fruit_qty">
                            <field name="fruit_qty" class="oe_inline"/>
                            <label for="fruit_qty" string=" kg"/>
                        </div>
                        <field name="returned_regular_case" attrs="{'readonly': ['|', ('fruit_culture_type', 'in', ('organic', 'conversion')), ('state', '=', 'done')]}"/>
                        <field name="returned_organic_case" attrs="{'readonly': ['|', ('fruit_culture_type', '=', 'regular'), ('state', '=', 'done')]}"/>
                        <field name="returned_palox_ids" widget="many2many_tags"
                            domain="[('borrower_partner_id', '=', commercial_partner_id)]"/>
                        <field name="operator_user_id" widget="selection"/>
                    </group>
                </group>
                <notebook>
                    <page name="lines" string="Arrival Lines">
                        <field name="line_ids" nolabel="1"
                            context="{'default_leaf_removal': default_leaf_removal, 'default_variant_id': default_variant_id, 'default_juice_product_id': default_juice_product_id, 'default_ochard_id': default_ochard_id, 'default_commercial_partner_id': commercial_partner_id, 'default_juice_destination': default_juice_destination, 'default_fruit_culture_type': fruit_culture_type, 'form_view_ref': 'fruit_mill.fruit_arrival_line_arrival_form'}">
                            <tree>
                                <field name="name"/>
                                <field name="fruit_qty" sum="1"/>
                                <field name="leaf_removal"/>
                                <field name="variant_id"/>
                                <field name="ripeness"/>
                                <field name="sanitary_state"/>
                                <field name="juice_product_id"/>
                                <field name="ochard_id"/>
                                <field name="palox_id"/>
                                <field name="juice_destination"/>
                                <field name="mix_withdrawal_juice_qty" string="Withdrawal (L)" sum="1"/>
                                <field name="extra_count" string="Extras"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>
                    <page name="additional" string="Results and Additional Info">
                        <group name="additional">
                            <group name="results" string="Production Results">
                                <label for="fruit_qty_pressed" string="Fruit Qty Pressed"/>
                                <div name="fruit_qty_pressed">
                                    <field name="fruit_qty_pressed" class="oe_inline"/>
                                    <label for="fruit_qty_pressed" string=" kg"/>
                                </div>
                                <label for="juice_qty_net" string="Net Juice Qty"/>
                                <div name="juice_qty_net">
                                    <field name="juice_qty_net" class="oe_inline"/>
                                    <label for="juice_qty_net" string=" L"/>
                                </div>
                                <label for="juice_ratio_net" string="Juice Net Ratio"/>
                                <div name="juice_ratio_net">
                                    <field name="juice_ratio_net" class="oe_inline"/>
                                    <label for="juice_ratio_net" string=" %"/>
                                </div>
                                <label for="fruit_ratio_net" string="Fruit Net Ratio"/>
                                <div name="fruit_ratio_net">
                                    <field name="fruit_ratio_net" class="oe_inline"/>
                                    <label for="fruit_ratio_net" string=" kg / L"/>
                                </div>
                            </group>
                            <group name="tech" string="Additional Info">
                                <field name="warehouse_id"/>
                                <field name="season_id"/>
                                <field name="lended_case_id" context="{'fruit_lended_case_main_view': True}"/>
                                <field name="done_datetime" states="done"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="hide_lend_palox_case_button" invisible="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="fruit_arrival_tree" model="ir.ui.view">
    <field name="name">fruit.arrival.tree</field>
    <field name="model">fruit.arrival</field>
    <field name="arch" type="xml">
        <tree string="Fruit Arrivals" decoration-info="state == 'draft'" decoration-success="state == 'weighted'" decoration-muted="state == 'cancel'">
            <field name="name"/>
            <field name="date"/>
            <field name="harvest_start_date"/>
            <field name="partner_id"/>
            <field name="commercial_partner_id" invisible="1"/>
            <field name="fruit_qty" sum="1"/>
            <field name="state"/>
            <field name="company_id" groups="base.group_multi_company"/>
        </tree>
    </field>
</record>

<record id="fruit_arrival_pivot" model="ir.ui.view">
    <field name="name">fruit.arrival.pivot</field>
    <field name="model">fruit.arrival</field>
    <field name="arch" type="xml">
        <pivot string="Fruit Arrivals">
            <field name="commercial_partner_id" type="row"/>
            <field name="fruit_qty" type="measure"/>
        </pivot>
    </field>
</record>

<record id="fruit_arrival_graph" model="ir.ui.view">
    <field name="name">fruit.arrival.graph</field>
    <field name="model">fruit.arrival</field>
    <field name="arch" type="xml">
        <graph string="Fruit Arrivals">
            <field name="date" type="row" interval="week"/>
            <field name="fruit_qty" type="measure"/>
        </graph>
    </field>
</record>



<record id="fruit_arrival_search" model="ir.ui.view">
    <field name="name">fruit.arrival.search</field>
    <field name="model">fruit.arrival</field>
    <field name="arch" type="xml">
        <search string="Search Fruit Arrivals">
            <field name="name"/>
            <field name="partner_id" operator="child_of"/>
            <field name="warehouse_id"/>
            <separator/>
            <filter name="current_season" string="Current Season" domain="[('season_id', '=', 'CURRENT_SEASON_ID')]"/>
            <separator/>
            <filter string="Draft" domain="[('state', '=', 'draft')]" name="draft"/>
            <filter string="Weighted" domain="[('state', '=', 'weighted')]" name="weighted"/>
            <filter string="Done" domain="[('state', '=', 'done')]" name="done"/>
            <filter string="Not Cancelled" domain="[('state', '!=', 'cancel')]" name="not_cancelled"/>
            <separator/>
            <filter name="today" string="Today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
            <group string="Group By" name="groupby">
                <filter name="commercial_partner_groupby" string="Farmer" context="{'group_by': 'commercial_partner_id'}"/>
                <filter name="day_groupby" string="Day" context="{'group_by': 'date:day'}"/>
                <filter name="week_groupby" string="Week" context="{'group_by': 'date:week'}"/>
                <filter name="month_groupby" string="Month" context="{'group_by': 'date:month'}"/>
                <filter name="warehouse_groupby" string="Warehouse" context="{'group_by': 'warehouse_id'}"/>
                <filter name="season_groupby" string="Season" context="{'group_by': 'season_id'}"/>
                <filter name="state_groupby" string="State" context="{'group_by': 'state'}"/>
            </group>
        </search>
    </field>
</record>

<record id="fruit_arrival_action" model="ir.actions.act_window">
    <field name="name">Arrivals</field>
    <field name="res_model">fruit.arrival</field>
    <field name="view_mode">tree,form,pivot,graph</field>
    <field name="context">{'search_default_not_cancelled': 1, 'search_default_current_season': 1}</field>
</record>

<menuitem id="fruit_arrival_menu" action="fruit_arrival_action" parent="fruit_operations_menu" sequence="20"/>

<record id="fruit_arrival_line_form" model="ir.ui.view">
    <field name="name">fruit.arrival.line.form</field>
    <field name="model">fruit.arrival.line</field>
    <field name="arch" type="xml">
        <form string="Fruit Arrival Lines">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,weighted,done"/>
            </header>
            <group name="main">
            <group name="main-left" string="Arrival">
                <field name="name"/>
                <field name="arrival_id"/>
                <field name="arrival_date"/>
                <field name="commercial_partner_id"/>
                <field name="fruit_culture_type"/>
                <label for="fruit_qty" string="Fruit Qty"/>
                <div name="fruit_qty">
                    <field name="fruit_qty" class="oe_inline"/>
                    <label for="fruit_qty" string=" kg"/>
                </div>
                <field name="leaf_removal"/>
                <field name="variant_id" widget="selection"/>
                <field name="ripeness"/>
                <field name="sanitary_state"/>
                <field name="juice_product_id"
                   domain="[('fruit_type', '=', 'juice'), ('fruit_culture_type', '=', fruit_culture_type)]" widget="selection"/>
                <field name="ochard_id" domain="[('partner_id', '=', commercial_partner_id)]" context="{'default_partner_id': commercial_partner_id}"/>
                <field name="palox_id" domain="['|', ('juice_product_id', '=', False), ('juice_product_id', '=', juice_product_id), '|', ('borrower_partner_id', '=', False), ('borrower_partner_id', '=', commercial_partner_id)]"/>
                <field name="juice_destination"/>
                <label for="mix_withdrawal_juice_qty" attrs="{'invisible': [('juice_destination', '!=', 'mix')]}" string="Requested Withdrawal Qty"/>
                <div name="mix_withdrawal_juice_qty" attrs="{'invisible': [('juice_destination', '!=', 'mix')]}">
                    <field name="mix_withdrawal_juice_qty"
                        attrs="{'required': [('juice_destination', '=', 'mix')]}" class="oe_inline"/>
                    <label for="mix_withdrawal_juice_qty" string=" L"/>
                </div>
            </group>
            <group name="main-right" string="Production">
                <field name="production_id"/>
                <field name="production_date"/>
                <field name="production_state"/>
                <field name="compensation_type"/>
                <label for="juice_qty" string="Juice Qty"/>
                <div name="juice_qty">
                    <field name="juice_qty" class="oe_inline"/>
                    <label for="juice_qty" string=" L / " class="oe_inline"/>
                    <field name="juice_qty_kg" class="oe_inline"/>
                    <label for="juice_qty_kg" string=" kg" class="oe_inline"/>
                </div>
                <label for="compensation_juice_qty" string="Compensation Juice Qty" attrs="{'invisible': [('compensation_type', 'not in', ('last', 'first'))]}"/>
                <div name="compensation_juice_qty" attrs="{'invisible': [('compensation_type', 'not in', ('last', 'first'))]}">
                    <field name="compensation_juice_qty" class="oe_inline"/>
                    <label for="compensation_juice_qty" string=" L"/>
                </div>
                <label for="juice_qty_with_compensation" string="Juice Qty with Compensation"/>
                <div name="juice_qty_with_compensation">
                    <field name="juice_qty_with_compensation" class="oe_inline"/>
                    <label for="juice_qty_with_compensation" string=" L"/>
                </div>

                <label for="shrinkage_juice_qty" string="Shrinkage Juice Qty"/>
                <div name="shrinkage_juice_qty">
                    <field name="shrinkage_juice_qty" class="oe_inline"/>
                    <label for="shrinkage_juice_qty" string=" L / " class="oe_inline"/>
                    <field name="shrinkage_juice_qty_kg" class="oe_inline"/>
                    <label for="shrinkage_juice_qty_kg" string=" kg" class="oe_inline"/>
                </div>
                <label for="withdrawal_juice_qty" string="Withdrawal Juice Qty" attrs="{'invisible': [('juice_destination', 'not in', ('withdrawal', 'mix'))]}"/>
                <div name="withdrawal_juice_qty" attrs="{'invisible': [('juice_destination', 'not in', ('withdrawal', 'mix'))]}">
                    <field name="withdrawal_juice_qty" class="oe_inline"/>
                    <label for="withdrawal_juice_qty" string=" L / " class="oe_inline"/>
                    <field name="withdrawal_juice_qty_kg" class="oe_inline"/>
                    <label for="withdrawal_juice_qty_kg" string=" kg" class="oe_inline"/>
                </div>
                <label for="filter_loss_juice_qty" string="Juice Qty Lost in Filter" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}"/>
                <div name="filter_loss_juice_qty" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}">
                    <field name="filter_loss_juice_qty" class="oe_inline"/>
                    <label for="filter_loss_juice_qty" string=" L" class="oe_inline"/>
                </div>
                <label for="to_sale_tank_juice_qty" string="Juice Qty to Sale Tank" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}"/>
                <div name="to_sale_tank_juice_qty" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}">
                    <field name="to_sale_tank_juice_qty" class="oe_inline"/>
                    <label for="to_sale_tank_juice_qty" string=" L" class="oe_inline"/>
                </div>
                <label for="sale_juice_qty" string="Juice Qty Sold" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}"/>
                <div name="sale_juice_qty" attrs="{'invisible': [('juice_destination', 'not in', ('sale', 'mix'))]}">
                    <field name="sale_juice_qty" class="oe_inline"/>
                    <label for="sale_juice_qty" string=" L" class="oe_inline"/>
                </div>
                <label for="juice_qty_net" string="Net Juice Qty"/>
                <div name="juice_qty_net">
                    <field name="juice_qty_net" class="oe_inline"/>
                    <label for="juice_qty_net" string=" L" class="oe_inline"/>
                </div>
                <label for="juice_ratio" string="Juice Gross Ratio"/>
                <div name="juice_ratio">
                    <field name="juice_ratio" class="oe_inline"/>
                    <label for="juice_ratio" string=" % (L)" class="oe_inline"/>
                </div>
                <label for="juice_ratio_net" string="Juice Net Ratio"/>
                <div name="juice_ratio_net">
                    <field name="juice_ratio_net" class="oe_inline"/>
                    <label for="juice_ratio_net" string=" % (L)" class="oe_inline"/>
                </div>
            </group>
            </group>
            <notebook>
                <page name="extras" string="Extra Items and Analysis">
                    <field name="extra_ids" nolabel="1"/>
                </page>
                <page name="other" string="Additional Information">
                    <group name="other_info">
                        <group name="other_stock">
                            <field name="season_id"/>
                            <field name="warehouse_id"/>
                            <field name="withdrawal_move_id"/>
                        </group>
                        <group name="invoice">
                            <field name="out_invoice_id"/>
                            <field name="in_invoice_line_id"/>
                            <field name="juice_sale_price_unit"/>
                            <field name="juice_sale_price_total"/>
                            <field name="juice_service_sale_price_unit"/>
                            <field name="juice_service_sale_price_total"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </form>
    </field>
</record>


<record id="fruit_arrival_line_arrival_form" model="ir.ui.view">
    <field name="name">fruit.arrival.line.extra_only.form</field>
    <field name="model">fruit.arrival.line</field>
    <field name="priority">1000</field>
    <field name="arch" type="xml">
        <form string="Fruit Arrival Line">
            <header>
                <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
            </header>
            <group name="main">
                <field name="name"/>
                <field name="juice_destination"/>
                <label for="mix_withdrawal_juice_qty" attrs="{'invisible': [('juice_destination', '!=', 'mix')]}" string="Requested Withdrawal Qty"/>
                <div name="mix_withdrawal_juice_qty" attrs="{'invisible': [('juice_destination', '!=', 'mix')]}">
                    <field name="mix_withdrawal_juice_qty"
                        attrs="{'required': [('juice_destination', '=', 'mix')]}" class="oe_inline"/>
                    <label for="mix_withdrawal_juice_qty" string=" L"/>
