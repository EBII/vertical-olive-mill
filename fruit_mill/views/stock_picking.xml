<odoo>


<record id="view_picking_form" model="ir.ui.view">
    <field name="name">fruit.mill.stock.picking.form</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
        <button name="action_cancel" position="before">
            <button name="start_fruit_juice_picking_wizard" string="Get Loose Fruit Juice" type="object" attrs="{'invisible': [('fruit_juice_picking_wizard_next_move_id', '=', False)]}" />
        </button>
        <field name="priority" position="after">
            <field name="fruit_juice_picking_wizard_next_move_id" invisible="1"/>
        </field>
    </field>
</record>


</odoo>
