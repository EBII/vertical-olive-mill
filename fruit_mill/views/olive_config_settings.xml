<odoo>


<record id="fruit_config_settings_form" model="ir.ui.view">
    <field name="name">fruit_config_settings_form</field>
    <field name="model">fruit.config.settings</field>
    <field name="arch" type="xml">
        <form string="Configure Warehouse" class="oe_form_configuration">
            <header>
                <button string="Apply" type="object" name="execute" class="btn-primary"/>
                <button string="Cancel" type="object" name="cancel" class="btn-default" special="cancel"/>
            </header>
            <group name="variables" string="Variables">
                <field name="company_id" invisible="1"/>
                <field name="current_season_id"/>
                <label for="fruit_juice_density"/>
                <div name="fruit_juice_density">
                    <field name="fruit_juice_density" class="oe_inline"/>
                    <label for="fruit_juice_density" string=" kg / L" class="oe_inline"/>
                </div>
                <label for="fruit_max_qty_per_palox"/>
                <div name="fruit_max_qty_per_palox">
                    <field name="fruit_max_qty_per_palox" class="oe_inline"/>
                    <label for="fruit_max_qty_per_palox" string=" kg" class="oe_inline"/>
                </div>
                <label for="fruit_shrinkage_ratio"/>
                <div name="fruit_shrinkage_ratio">
                    <field name="fruit_shrinkage_ratio" class="oe_inline"/>
                    <label for="fruit_shrinkage_ratio" string=" %" class="oe_inline"/>
                </div>
                <label for="fruit_filter_ratio"/>
                <div name="fruit_filter_ratio">
                    <field name="fruit_filter_ratio" class="oe_inline"/>
                    <label for="fruit_filter_ratio" string=" %" class="oe_inline"/>
                </div>
                <label for="fruit_min_ratio"/>
                <div name="fruit_min_ratio">
                    <field name="fruit_min_ratio" class="oe_inline"/>
                    <label for="fruit_min_ratio" string=" %" class="oe_inline"/>
                </div>
                <label for="fruit_max_ratio"/>
                <div name="fruit_max_ratio">
                    <field name="fruit_max_ratio" class="oe_inline"/>
                    <label for="fruit_max_ratio" string=" %" class="oe_inline"/>
                </div>
                <label for="fruit_harvest_arrival_max_delta_days"/>
                <div name="fruit_harvest_arrival_max_delta_days">
                    <field name="fruit_harvest_arrival_max_delta_days" class="oe_inline"/>
                    <label for="fruit_harvest_arrival_max_delta_days" string=" days" class="oe_inline"/>
                </div>
            </group>
            <group name="appointment" string="Appointments">
                <label for="fruit_appointment_qty_per_palox"/>
                <div name="fruit_appointment_qty_per_palox">
                    <field name="fruit_appointment_qty_per_palox" class="oe_inline"/>
                    <label for="fruit_appointment_qty_per_palox" string=" kg" class="oe_inline"/>
                </div>
                <label for="fruit_appointment_arrival_no_leaf_removal_minutes"/>
                <div name="fruit_appointment_arrival_no_leaf_removal_minutes">
                    <field name="fruit_appointment_arrival_no_leaf_removal_minutes" class="oe_inline"/>
                    <label for="fruit_appointment_arrival_no_leaf_removal_minutes" string=" minutes / 100 kg of fruit" class="oe_inline"/>
                </div>
                <label for="fruit_appointment_arrival_leaf_removal_minutes"/>
                <div name="fruit_appointment_arrival_leaf_removal_minutes">
                    <field name="fruit_appointment_arrival_leaf_removal_minutes" class="oe_inline"/>
                    <label for="fruit_appointment_arrival_leaf_removal_minutes" string=" minutes / 100 kg of fruit" class="oe_inline"/>
                </div>
                <label for="fruit_appointment_arrival_min_minutes"/>
                <div name="fruit_appointment_arrival_min_minutes">
                    <field name="fruit_appointment_arrival_min_minutes" class="oe_inline"/>
                    <label for="fruit_appointment_arrival_min_minutes" string=" minutes" class="oe_inline"/>
                </div>
                <label for="fruit_appointment_lend_minutes"/>
                <div name="fruit_appointment_lend_minutes">
                    <field name="fruit_appointment_lend_minutes" class="oe_inline"/>
                    <label for="fruit_appointment_lend_minutes" string=" minutes" class="oe_inline"/>
                </div>
                <label for="fruit_appointment_withdrawal_minutes"/>
                <div name="fruit_appointment_withdrawal_minutes">
                    <field name="fruit_appointment_withdrawal_minutes" class="oe_inline"/>
                    <label for="fruit_appointment_withdrawal_minutes" string=" minutes" class="oe_inline"/>
                </div>
            </group>
            <group name="juice_production" string="Juice Production">
                <label for="fruit_juice_production_start_hour"/>
                <div name="fruit_juice_production_start_hour">
                    <field name="fruit_juice_production_start_hour" class="oe_inline"/> h
                </div>
                <label for="fruit_juice_production_start_minute"/>
                <div name="fruit_juice_production_start_minute">
                    <field name="fruit_juice_production_start_minute" class="oe_inline"/> min
                </div>
                <label for="fruit_juice_production_duration_minutes"/>
                <div name="fruit_juice_production_duration_minutes">
                    <field name="fruit_juice_production_duration_minutes" class="oe_inline"/> minutes
                </div>
            </group>
            <group name="invoicing" string="Invoicing">
                <label for="fruit_juice_leaf_removal_product_id"/>
                <div name="fruit_juice_leaf_removal_product_id">
                    <field name="fruit_juice_leaf_removal_product_id" class="oe_inline"/>
                </div>
                <label for="fruit_juice_production_product_id"/>
                <div name="fruit_juice_production_product_id">
                    <field name="fruit_juice_production_product_id" class="oe_inline"/>
                </div>
                <label for="fruit_juice_early_bird_discount_product_id"/>
                <div name="fruit_juice_early_bird_discount_product_id">
                    <field name="fruit_juice_early_bird_discount_product_id" class="oe_inline"/>
                </div>
                <label for="fruit_juice_tax_product_id"/>
                <div name="fruit_juice_tax_product_id">
                    <field name="fruit_juice_tax_product_id" class="oe_inline"/>
                </div>
            </group>
            <group name="analysis" string="Analysis">
                <label for="fruit_juice_analysis_default_user_id"/>
                <div name="fruit_juice_analysis_default_user_id">
                    <field name="fruit_juice_analysis_default_user_id" class="oe_inline"/>
                </div>
            </group>
        </form>
    </field>
</record>

<record id="fruit_config_settings_action" model="ir.actions.act_window">
    <field name="name">Settings</field>
    <field name="res_model">fruit.config.settings</field>
    <field name="view_mode">form</field>
    <field name="target">inline</field>
</record>

<menuitem id="fruit_config_settings_menu"
        action="fruit_config_settings_action"
        parent="fruit_config_menu"
        groups="base.group_system"
        sequence="10"/>


</odoo>
