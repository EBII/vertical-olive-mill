<odoo>

<record id="fruit_variant_form" model="ir.ui.view">
    <field name="name">fruit.variant.form</field>
    <field name="model">fruit.variant</field>
    <field name="arch" type="xml">
        <form string="Fruit Variant">
            <sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="toggle_active" type="object"
                        class="oe_stat_button" icon="fa-archive">
                        <field name="active" widget="boolean_button"
                            options='{"terminology": "archive"}'/>
                    </button>
                </div>
                <group name="main">
                    <field name="name"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="fruit_variant_tree" model="ir.ui.view">
    <field name="name">fruit.variant.tree</field>
    <field name="model">fruit.variant</field>
    <field name="arch" type="xml">
        <tree string="Fruit Variants">
            <field name="sequence" widget="handle"/>
            <field name="name"/>
        </tree>
    </field>
</record>

<record id="fruit_variant_search" model="ir.ui.view">
    <field name="name">fruit.variant.search</field>
    <field name="model">fruit.variant</field>
    <field name="arch" type="xml">
        <search string="Search Fruit Variants">
            <field name="name"/>
            <separator/>
            <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
        </search>
    </field>
</record>

<record id="fruit_variant_action" model="ir.actions.act_window">
    <field name="name">Fruit Variants</field>
    <field name="res_model">fruit.variant</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="fruit_variant_menu" action="fruit_variant_action" parent="fruit_config_menu" sequence="80"/>

</odoo>
