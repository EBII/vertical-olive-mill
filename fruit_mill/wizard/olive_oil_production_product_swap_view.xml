<odoo>

<record id="fruit_juice_production_product_swap_form" model="ir.ui.view">
    <field name="name">fruit.juice.production.product.swap.form</field>
    <field name="model">fruit.juice.production.product.swap</field>
    <field name="arch" type="xml">
        <form string="Swap Juice Type">
            <group name="main">
                <field name="production_id" invisible="1"/>
                <field name="palox_id"/>
                <field name="farmers"/>
                <field name="season_id" invisible="1"/>
                <field name="juice_destination"/>
                <field name="current_juice_product_id"/>
                <field name="new_juice_product_id" domain="[('fruit_type', '=', 'juice'), ('id', '!=', current_juice_product_id)]"/>
                <field name="sale_location_id" attrs="{'invisible': [('juice_destination', '=', 'withdrawal')]}" domain="[('fruit_tank_type', '=', 'regular'), ('juice_product_id', '=', new_juice_product_id), ('fruit_season_id', '=', season_id)]"/>
            </group>
            <footer>
                <button name="validate" type="object" string="Validate" class="btn-primary" confirm="This is an important decision. Are you sure?"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<record id="fruit_juice_production_product_swap_action" model="ir.actions.act_window">
    <field name="name">Swap Juice Type</field>
    <field name="res_model">fruit.juice.production.product.swap</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>
