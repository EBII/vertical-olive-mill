<odoo>


<record id="fruit_palox_generate_production_form" model="ir.ui.view">
    <field name="name">fruit.palox.generate.production.form</field>
    <field name="model">fruit.palox.generate.production</field>
    <field name="arch" type="xml">
        <form string="Generate Juice Productions">
            <group name="main">
                <field name="palox_ids" widget="many2many_tags"/>
                <field name="warehouse_id"/>
                <field name="date"/>
            </group>
            <footer>
                <button name="generate" type="object" string="Generate" class="btn-primary"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<act_window id="fruit_palox_generate_production_action"
            multi="True"
            key2="client_action_multi"
            name="Generate Juice Productions"
            res_model="fruit.palox.generate.production"
            src_model="fruit.palox"
            view_mode="form"
            target="new" />


</odoo>
