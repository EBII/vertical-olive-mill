<odoo>

<record id="fruit_juice_production_pack2check_form" model="ir.ui.view">
    <field name="name">fruit.juice.production.pack2check.form</field>
    <field name="model">fruit.juice.production.pack2check</field>
    <field name="arch" type="xml">
        <form string="Fruit Juice Production pack2check">
            <group name="main">
                <field name="production_id" invisible="1"/>
                <field name="palox_id"/>
                <field name="juice_product_id"/>
                <field name="todo_arrival_line_ids" invisible="1"/>
                <field name="arrival_line_id" domain="[('production_id', '=', production_id)]"/>
                <label for="line_juice_ratio"/>
                <div>
                    <field name="line_juice_ratio" class="oe_inline"/> %
                </div>
                <label for="line_withdrawal_juice_qty_kg"/>
                <div>
                    <field name="line_withdrawal_juice_qty_kg" class="oe_inline"/> kg
                </div>
                <label for="line_withdrawal_juice_qty"/>
                <div>
                    <field name="line_withdrawal_juice_qty" class="oe_inline"/> L
                </div>
            </group>
            <group name="lines" string="Extra Items">
                <field name="extra_ids" nolabel="1" colspan="2" context="{'fruit_fillup_bottles': True}"/>
            </group>
            <footer>
                <button name="validate" type="object" string="Validate" class="btn-primary"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<record id="fruit_juice_production_pack2check_action" model="ir.actions.act_window">
    <field name="name">Fruit Juice Production pack2check</field>
    <field name="res_model">fruit.juice.production.pack2check</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>
