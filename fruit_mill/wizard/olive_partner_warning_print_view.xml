<odoo>

<record id="fruit_partner_warning_print_form" model="ir.ui.view">
    <field name="name">fruit.partner.warning.print.form</field>
    <field name="model">fruit.partner.warning.print</field>
    <field name="arch" type="xml">
        <form string="Print Farmer Warnings">
            <group name="main">
                <field name="season_id"/>
            </group>
            <footer>
                <button name="run" type="object" string="Show" class="btn-primary"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<record id="fruit_partner_warning_print_action" model="ir.actions.act_window">
    <field name="name">Farmer Warnings</field>
    <field name="res_model">fruit.partner.warning.print</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem id="fruit_partner_warning_print_menu" action="fruit_partner_warning_print_action" parent="fruit_report_menu" sequence="200"/>

</odoo>
