<odoo>

<record id="olive_arrival_form" model="ir.ui.view">
    <field name="name">olive.arrival.form</field>
    <field name="model">olive.arrival</field>
    <field name="arch" type="xml">
        <form string="Olive Arrival">
            <header>
                <button name="validate" string="Validate" class="btn-primary" states="draft" type="object"/>
                <button name="cancel" string="Cancel" class="btn-default" states="draft" confirm="Are you sure you want to cancel this arrival ?" type="object"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <label for="name"/>
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>
                <group name="main">
                    <group name="left">
                        <field name="partner_id"/>
                        <field name="default_variant_id" widget="selection"/>
                        <field name="default_ochard_id" domain="[('partner_id', '=', partner_id)]"/>
                        <field name="default_oil_destination"/>
                        <field name="leaf_removal"/>
                        <field name="returned_case"/>
                        <field name="returned_organic_case"/>
                    </group>
                    <group name="right">
                        <label for="qty"/>
                        <div name="qty">
                            <field name="qty" class="oe_inline"/>
                            <label string="Â kg"/>
                        </div>
                        <field name="warehouse_id"/>
                        <field name="season_id"/>
                        <field name="done_datetime" states="done"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>
                <group name="lines">
                    <field name="line_ids" nolabel="1"
                        context="{'default_variant_id': default_variant_id, 'default_ochard_id': default_ochard_id, 'default_partner_id': partner_id, 'default_oil_destination': default_oil_destination}">
                        <tree editable="bottom">
                            <field name="partner_id" invisible="1"/>
                            <field name="variant_id" widget="selection"/>
                            <field name="qty" sum="1" string="Olive Qty (kg)"/>
                            <field name="ripeness"/>
                            <field name="sanitary_state"/>
                            <field name="oil_product_id"
                                domain="[('olive_type', '=', 'oil'), ('olive_culture_type', '=', product_olive_culture_type)]"/>
                            <field name="ochard_id" domain="[('partner_id', '=', partner_id)]"/>
                            <field name="palox_id"/>
                            <field name="oil_destination"/>
                            <field name="sale_qty" string="Sale Qty (kg)"
                                attrs="{'readonly': [('oil_destination', '=', 'withdrawal')]}"/>
                        </tree>
                    </field>
                </group>
            </sheet>
            <div class="oe_chatter">
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="message_ids" widget="mail_thread"/>
            </div>
        </form>
    </field>
</record>

<record id="olive_arrival_tree" model="ir.ui.view">
    <field name="name">olive.arrival.tree</field>
    <field name="model">olive.arrival</field>
    <field name="arch" type="xml">
        <tree string="Olive Arrivals" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
            <field name="name"/>
            <field name="partner_id"/>
            <field name="qty"/>
            <field name="leaf_removal"/>
            <field name="state"/>
        </tree>
    </field>
</record>

<record id="olive_arrival_search" model="ir.ui.view">
    <field name="name">olive.arrival.search</field>
    <field name="model">olive.arrival</field>
    <field name="arch" type="xml">
        <search string="Search Olive Arrivals">
            <field name="name"/>
            <field name="partner_id"/>
            <separator/>
            <filter string="Draft" domain="[('state', '=', 'draft')]" name="draft"/>
            <filter string="Done" domain="[('state', '=', 'done')]" name="done"/>
            <group string="Group By" name="groupby">
                <filter name="partner_groupby" string="Farmer" context="{'group_by': 'partner_id'}"/>
                <filter name="season_groupby" string="Season" context="{'group_by': 'season_id'}"/>
                <filter name="state_groupby" string="State" context="{'group_by': 'state'}"/>
            </group>
        </search>
    </field>
</record>

<record id="olive_arrival_action" model="ir.actions.act_window">
    <field name="name">Olive Arrivals</field>
    <field name="res_model">olive.arrival</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem id="olive_arrival_menu" action="olive_arrival_action" parent="olive_operations_menu" sequence="20"/>

</odoo>
