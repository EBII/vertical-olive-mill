<odoo>

<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">olive.mill.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="priority">1000</field>  <!-- to have olive_type right after type -->
    <field name="arch" type="xml">
        <field name="type" position="after">
            <field name="olive_type" attrs="{'invisible': [('type', '!=', 'product')]}"/>
            <field name="olive_culture_type" attrs="{'invisible': [('olive_type', '=', 'False')], 'required': [('olive_type', '!=', False)]}"/>
        </field>
    </field>
</record>


</odoo>
