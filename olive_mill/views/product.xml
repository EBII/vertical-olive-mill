<odoo>

<record id="product_template_form_view" model="ir.ui.view">
    <field name="name">olive.mill.product.template.form</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="priority">1000</field>  <!-- to have olive_type right after type -->
    <field name="arch" type="xml">
        <field name="type" position="after">
            <field name="olive_type" attrs="{'invisible': [('type', '!=', 'product')]}"/>
            <field name="olive_culture_type" attrs="{'invisible': [('olive_type', '=', 'False')], 'required': [('olive_type', '=', 'oil')]}"/>
        </field>
    </field>
</record>

<record id="product_normal_form_view" model="ir.ui.view">
    <field name="name">olive.mill.product.product.form</field>
    <field name="model">product.product</field>
    <field name="inherit_id" ref="product.product_normal_form_view"/>
    <field name="arch" type="xml">
        <field name="default_code" position="before">
            <field name="shrinkage_prodlot_id" attrs="{'invisible': [('olive_type', '!=', 'oil')]}" context="{'default_product_id': active_id}" domain="[('product_id', '=', active_id)]"/>
        </field>
    </field>
</record>


<record id="olive_product_action" model="ir.actions.act_window">
    <field name="name">Products</field>
    <field name="res_model">product.product</field>
    <field name="view_mode">tree,form,kanban</field>
    <field name="domain">[('olive_type', '!=', False)]</field>
    <field name="context">{'default_type': 'product'}</field>
</record>

<menuitem id="olive_product_menu" action="olive_product_action" parent="olive_data_menu" sequence="100"/>

</odoo>
