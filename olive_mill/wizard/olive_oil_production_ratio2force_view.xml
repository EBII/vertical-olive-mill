<odoo>

<record id="olive_oil_production_ratio2force_form" model="ir.ui.view">
    <field name="name">olive.oil.production.ratio2force.form</field>
    <field name="model">olive.oil.production.ratio2force</field>
    <field name="arch" type="xml">
        <form string="Olive Oil Production Ratio2Force">
            <group name="main">
                <field name="olive_oil_production_id"/>
                <field name="palox_id"/>
                <field name="oil_product_id"/>
                <label for="olive_qty"/>
                <div name="olive_qty">
                    <field name="olive_qty" class="oe_inline"/>
                    <label string=" kg" class="oe_inline"/>
                </div>
                <label for="oil_qty_kg"/>
                <div name="oil_qty_kg">
                    <field name="oil_qty_kg" class="oe_inline"/>
                    <label string=" kg" class="oe_inline"/>
                </div>
                <label for="oil_qty"/>
                <div name="oil_qty">
                    <field name="oil_qty" class="oe_inline"/>
                    <label string=" L" class="oe_inline"/>
                </div>

                <label for="ratio"/>
                <div name="ratio">
                    <field name="ratio" class="oe_inline"/>
                    <label string=" %" class="oe_inline"/>
                </div>
            </group>
            <footer>
                <button name="validate" type="object" string="Validate" class="btn-primary"/>
                <button special="cancel" string="Cancel" class="btn-default"/>
            </footer>
        </form>
    </field>
</record>

<record id="olive_oil_production_ratio2force_action" model="ir.actions.act_window">
    <field name="name">Olive Oil Production Ratio2force</field>
    <field name="res_model">olive.oil.production.ratio2force</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

</odoo>
